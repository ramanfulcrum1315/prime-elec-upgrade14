<?php
/**
 * Pager template
 *
 * @see Celebros_Salesperson_Block_Html_Pager
 */
?>

<?php if($this->getResultCount() && $this->getPageNavType() == 'multipage' && $this->getLastPageNum()>1): ?>
	<?php $textDecorationNoneClass = $this->getAnchorTextForPrevious() ? "" : "salesperson-text-decoration-none"?>
    <div class="pages">
        <strong><?php echo $this->__('Page:') ?></strong>
        <ol>
        <?php if (!$this->isFirstPage()): ?>
        	<li style="display"none;">
                <a class="previous <?php echo $textDecorationNoneClass?>" <?php echo Mage::helper('salesperson')->getHref($this->getFirstPageUrl())?> title="<?php echo $this->__('First') ?>">
                    <?php if(!$this->getAnchorTextForPrevious()): ?>
                        <img src="<?php echo $this->getSkinUrl('images/salesperson_pager-prev.gif') ?>" alt="<?php echo $this->__('First') ?>" class="v-middle" />
                        <img src="<?php echo $this->getSkinUrl('images/salesperson_pager-prev.gif') ?>" alt="<?php echo $this->__('First') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->__('first') ?>
                    <?php endif;?>
                </a>
            </li>
            <li>
                <a class="previous <?php echo $textDecorationNoneClass?>" <?php echo Mage::helper('salesperson')->getHref($this->getPreviousPageUrl())?> title="<?php echo $this->__('Previous') ?>">
                    <?php if(!$this->getAnchorTextForPrevious()): ?>
                        <img src="<?php echo $this->getSkinUrl('images/salesperson_pager-prev.gif') ?>" alt="<?php echo $this->__('Previous') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForPrevious() ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>

        <?php if ($this->canShowFirst()): ?>
            <li><a class="first" <?php echo Mage::helper('salesperson')->getHref($this->getFirstPageUrl())?> >1</a></li>
        <?php endif;?>
        <?php if ($this->canShowPreviousJump()): ?>
            <li><a class="previous_jump" title="" <?php echo Mage::helper('salesperson')->getHref($this->getPreviousJumpUrl())?> >...</a></li>
        <?php endif;?>

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <li class="current"><?php echo $_page ?></li>
            <?php else: ?>
                <li><a <?php echo Mage::helper('salesperson')->getHref($this->getPageUrl($_page))?> ><?php echo $_page ?></a></li>
            <?php endif;?>
        <?php endforeach;?>

        <?php if ($this->canShowNextJump()): ?>
            <li><a class="next_jump" title="" <?php echo Mage::helper('salesperson')->getHref($this->getNextJumpUrl())?> >...</a></li>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <li><a class="last" <?php echo Mage::helper('salesperson')->getHref($this->getLastPageUrl())?> ><?php echo $this->getLastPageNum() ?></a><li>
        <?php endif;?>

        <?php if (!$this->isLastPage()): ?>
            <li>
                <a class="next <?php echo $textDecorationNoneClass?>" <?php echo Mage::helper('salesperson')->getHref($this->getNextPageUrl())?> title="<?php echo $this->__('Next') ?>">
                    <?php if(!$this->getAnchorTextForNext()): ?>
                        <img src="<?php echo $this->getSkinUrl('images/salesperson_pager-next.gif') ?>" alt="<?php echo $this->__('Next') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForNext() ?>
                    <?php endif;?>
                </a>
            </li>
            <li style="display:none;">
                <a class="next <?php echo $textDecorationNoneClass?>" <?php echo Mage::helper('salesperson')->getHref($this->getLastPageUrl())?> title="<?php echo $this->__('Last') ?>">
                    <?php if(!$this->getAnchorTextForNext()): ?>
                        <img src="<?php echo $this->getSkinUrl('images/salesperson_pager-next.gif') ?>" alt="<?php echo $this->__('Last') ?>" class="v-middle" />
                        <img src="<?php echo $this->getSkinUrl('images/salesperson_pager-next.gif') ?>" alt="<?php echo $this->__('Last') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->__('last') ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>
        </ol>
    </div>
<?php endif ?>
