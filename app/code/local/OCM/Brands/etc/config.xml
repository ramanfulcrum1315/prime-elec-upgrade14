<?xml version="1.0"?>
<config>
    <modules>
        <OCM_Brands>
            <version>0.1.1</version>
        </OCM_Brands>
    </modules>
    
    <frontend>
        <routers>
            <brands>
                <use>standard</use>
                <args>
                    <module>OCM_Brands</module>
                    <frontName>brands</frontName>
                </args>
            </brands>
        </routers>
        <layout>
            <updates>
                <brands>
                    <file>ocm/brands.xml</file>
                </brands>
            </updates>
        </layout>
    </frontend>
    
    <admin>
        <routers>
			<adminhtml>
				<args>
    				<modules>
                        <brands before="Mage_Adminhtml">OCM_Brands_Adminhtml</brands>
    				</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>

    <global>
        <models>
            <brands>
                <class>OCM_Brands_Model</class>
                <resourceModel>brands_resource</resourceModel>
            </brands>
            <brands_resource>
                <class>OCM_Brands_Model_Resource</class>
                <entities>
                    <brands>
                        <table>brands</table>
                    </brands>
                </entities>
            </brands_resource>
        </models>
        <resources>
            <brands_setup>
                <setup>
                    <module>OCM_Brands</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brands_setup>
            <brands_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brands_write>
            <brands_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brands_read>
        </resources>
        <blocks>
            <brands>
                <class>OCM_Brands_Block</class>
            </brands>
            <catalog>
                <rewrite>
                    <layer_state>OCM_Brands_Block_Catalog_Layer_State</layer_state>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <brands>
                <class>OCM_Brands_Helper</class>
            </brands>
        </helpers>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <add_brand_handle>
                        <class>OCM_Brands_Model_Observer</class>
                        <method>addBrandHandle</method>
                    </add_brand_handle>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </global>
    <default>
        <brands_options>
            <data>                
                <brand_attr>manufacturer</brand_attr>
            </data>
        </brands_options>         
    </default>
</config>